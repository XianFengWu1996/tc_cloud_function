{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
